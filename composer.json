{
    "name": "kapow/kapow-us",
    "description": "Kapow.us - A platform for discovering, tracking, and interacting with comics, publishers, artists, and local comic shops",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.4",
        "cakephp/cakephp": "~2.10.24",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse app",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}
